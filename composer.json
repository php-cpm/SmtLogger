{
  "name": "smtlogger/smtlogger",
  "description": "An outbox logger for u",
  "keywords": [
    "logger",
    "monolog"
  ],
  "license": "Apache-2.0",
  "type": "library",
  "require": {
    "php": ">=7.2",
    "monolog/monolog": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.0"
  },
  "autoload": {
    "psr-4": {
      "SmtLogger\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ]
  },
  "scripts": {
    "install-d": "composer install --apcu-autoloader -o --prefer-dist -vvv"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
